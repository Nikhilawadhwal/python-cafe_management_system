menu = {'Pizza': 120,'Momos': 200 ,'Pasta': 180 ,'Dosa': 150 ,'Coldrink': 60 }

print("Welcome to my cafe")
print("pizza : 120 \n Momos : 200 \n Pasta : 180 \n Dosa : 150 \n Coldrink : 60")

order_total = 0

item_1 =input("Enter the item you want :-")
if item_1 in menu:
    order_total += menu[item_1]
    print(f"your item {item_1} has been added to your order")
else:
    print(f"the {item_1} is not available in my menu ")

another_item = input("Do you want to add anoter item in your order = ")
if another_item == "yes":
    item_2 = input("Enter your item second =")
    if item_2 in menu:
        order_total += menu[item_2]
        print(f"Item {item_2} has been added to your order")
    else:
        print(f"ordered item {item_2} is not available in my menu")


print(f"Total amount of your order is {order_total}")


